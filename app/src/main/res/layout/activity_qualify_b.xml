

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="pe.edu.upc.baby_sitter.QualifyBActivity">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/action_qualify_bs"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true" />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="2.0"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_babysister"
            android:layout_below="@+id/ratingBar"
            android:layout_alignEnd="@+id/txt_comentario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txt_comentario"
            android:singleLine="true"
            android:text="@string/txt_coment"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/txt_babysister"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_below="@+id/txt_comentario"
            android:layout_alignParentStart="true"
            android:singleLine="false"
            android:longClickable="false"
            android:editable="true"
            android:layout_alignEnd="@+id/btn_saveQualify" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_qualify"
            android:id="@+id/btn_saveQualify"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
